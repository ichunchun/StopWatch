<Window x:Class="StopWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StopWatch"
        mc:Ignorable="d"
        Title="MainWindow"  Height="150" Width="250" WindowStartupLocation="CenterScreen">
    
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox Width="50" Height="50" x:Name="inputDays" Text="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="30"></TextBox>
            <TextBox Width="50" Height="50" x:Name="inputHours" Text="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="30"></TextBox>
            <TextBox Width="50" Height="50" x:Name="inputMins" Text="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="30"></TextBox>
            <TextBox Width="50" Height="50" x:Name="inputSeconds" Text="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="30"></TextBox>
        </StackPanel>
        <Button Height="30" Width="100" Click="ButtonBase_OnClick" Margin="0 10 0 0">点击</Button>
    </StackPanel>
    
</Window>
