<Window x:Class="StopWatch.StopWatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:StopWatch"
        mc:Ignorable="d"
        Title="StopWatchWindow" Height="60" Width="225" Background="Transparent" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen" MouseDown="UIElement_OnMouseDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="90*" />
        </Grid.ColumnDefinitions>
        <Border Grid.ColumnSpan="2" Background="#3b77ab" Opacity="0.4" CornerRadius="10" ></Border>
        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Label Grid.Column="1" Content="00:00:00:00" Foreground="White" FontSize="36" x:Name="countdownTextBlock"></Label>
        </StackPanel>
    </Grid>
</Window>
